{   
    // Window
    "window.zoomLevel": -1,
    "window.menuBarVisibility": "toggle",
    "window.customTitleBarVisibility": "never",
    
    // Workbench
    "workbench.tree.indent": 12,
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Plastic",
    "workbench.iconTheme": "glyph.minimal",
    "workbench.startupEditor": "none",

    // Explorer
    "explorer.autoReveal": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    
    // Editor
    "breadcrumbs.enabled": true,
    "editor.padding.top": 12,
    "editor.padding.bottom": 12,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": false,
    "editor.fontFamily": "'Dejavu Sans Mono', 'monospace', monospace",
    "editor.inlineSuggest.fontFamily": "'Dejavu Sans Mono', 'monospace', monospace",
    
    // Terminal
    "terminal.integrated.fontFamily": "'Dejavu Sans Mono', 'monospace', monospace",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "args": [
                "-li"
            ]
        },
    },

    // Tasks
    "task.problemMatchers.neverPrompt": true,
    
    // Debugger
    "debug.console.fontSize": 15,
    "debug.console.fontFamily": "'Dejavu Sans Mono', 'monospace', monospace",
    
    // SCM
    "scm.inputFontFamily": "'Dejavu Sans Mono', 'monospace', monospace",
    "security.workspace.trust.untrustedFiles": "open",

    // Version Controll
    "diffEditor.renderSideBySide": false,
    "dart.updateImportsOnRename": false,
    "javascript.updateImportsOnFileMove.enabled": "never",
}